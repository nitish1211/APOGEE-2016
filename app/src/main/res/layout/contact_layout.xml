<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/callImage"
        android:padding="4dp"
        android:background="@drawable/round_button"
        android:src="@drawable/nitish"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/call"
        android:src="@drawable/call"
        android:layout_below="@+id/callImage"
        android:layout_toLeftOf="@+id/callImage"
        android:layout_toStartOf="@+id/callImage" />

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/mail"
        android:src="@drawable/gmail"
        android:layout_alignTop="@+id/call"
        android:layout_toRightOf="@+id/callImage"
        android:layout_toEndOf="@+id/callImage" />

