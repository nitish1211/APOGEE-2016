<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:background="@color/black"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="2dp"
        android:background="@drawable/round_button"
        android:id="@+id/ProfPicture"
        android:alpha="0.6"
        android:layout_alignParentTop="true"
        android:src="@drawable/stallman"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:alpha="0.8"
        android:id="@+id/profName"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:text="Mobasshar Javed Akbar"
        android:layout_alignTop="@+id/ProfPicture"
        android:layout_alignBottom="@+id/ProfPicture"
        android:layout_toEndOf="@+id/ProfPicture"
        android:layout_toRightOf="@+id/ProfPicture"
        />



</RelativeLayout>